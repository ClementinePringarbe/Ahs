{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>Season index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Episodes_number</th>
                <th>Resume</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.title }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.episodesNumber }}</td>
                <td>{{ season.resume }}</td>
                <td>{{ season.photo }}</td>
                <td>
                    <a href="{{ path('app_back_season_show', {'id': season.id}) }}">show</a>
                    <a href="{{ path('app_back_season_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_season_new') }}">Create new</a>
{% endblock %}
